@{
    ViewData["Title"] = "AddProductToDB";
    Layout = "~/Views/Shared/_LazaroLayout.cshtml";
}

@model PROG123.Models.ProductModel


<form asp-action="AddProductToDB" method="post">
    <div class="inputwrap">
        <label>Name:</label>
        @ViewBag.itemName
    </div>

    <div class="inputwrap">
        <label>Description:</label>
        @ViewBag.itemDesc
    </div>

    <div class="inputwrap">
        <label>Price:</label>
        @ViewBag.itemPrice
    </div>

    <div class="inputwrap">
        <label>Inventory:</label>
        @ViewBag.itemInv
    </div>

</form>

<form asp-action="EnterNewProduct" method="post">
    <div class="inputwrap">
        <label><button type="submit">Enter another product</button></label>
    </div>
</form>